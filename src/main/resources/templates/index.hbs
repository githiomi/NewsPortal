{{#partial "nav-bar"}}

{{/partial}}

{{#partial "pagename"}}
    <small> You are about to login as an Admin </small>
{{/partial}}

{{#partial "content"}}

    <div id="div">
        <div class="col-md-8" style="margin-left:18%; border-radius:15px; text-align:center">
          <br>
            <small style="border-bottom:2px solid teal; padding:5px;"> Login here </small>
            <hr>

            <form action="/home" method="post">

                <div class="form-group">
                    <label for="username"> Username: </label>
                    <input id="username" name="username" value="{{username}}" style="padding:5px; width:50%;">
                </div>

                <label for="password"> Password: </label>
                <input id="password" name="password" style="padding:5px; width:50%;">

                {{#if username}}
                    <br>
                    <small style="color:red;"> <br> Enter correct password! </small>
                {{/if}}

                    <h4><small style="color:black;"> Admin password: "123456" </small></h4>

                <button type="submit" class="btn btn-default"> Login </button>
            </form>

        </div>
    </div>

{{/partial}}

{{>layout.hbs}}