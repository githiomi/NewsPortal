{{#partial "pagename"}}
    {{username}}, from here you can add a new News.
    <br><br>
    <small style="text-align:center;"> It will be viewed by everyone </small>
{{/partial}}

{{#partial "content"}}

    <div id="body" class="bg-dark">
        <div class="col-md-8" style="margin-left:20%; border-radius:15px; background-color:teal; text-align:center">
            <br>
            <small style="border-bottom:2px solid teal; padding:5px;"> Add Company News Item Here </small>
            <hr>

            <form action="/companynews" method="post">

                <div class="form-group">
                    <label for="title"> News Title: </label>
                    <input id="title" name="title" style="padding:5px; width:50%;">
                </div>

                <label for="urgency"> Urgency: </label>
                <select id="urgency" name="urgency" style="padding:5px; width:50%;">
                    <option value=""></option>
                    <option value="Not Urgent">Not Urgent</option>
                    <option value="Neutral Urgency">Neutral Urgency</option>
                    <option value="Very Urgent">Very Urgent</option>
                </select>

                <div style="margin:8px;" class="form-group">
                    <label for="content"> News Content: </label>
                    <textarea id="content" name="content" style="padding:5px; width:50%;"></textarea>
                </div>

                <div class="form-group">
                    <label for="userid"> Created By: </label>
                        {{#if users}}
                          <select id="userid" name="userid" style="padding:5px; width:50%;">
                            <option value=""></option>
                            {{#each users}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                          </select>
                        {{else}}
                            <small style="padding:5px; width:50%;"> There are no employees recorded yet. <br>
                                Make sure to add a user first!
                            </small>
                        {{/if}}
                </div>

                <button type="submit" class="btn btn-default"> Submit </button>
            </form>

        </div>
    </div>

{{/partial}}

{{#partial "buttons"}}
    <a href="/home"> <button class="btn btn-danger"> Go bach home </button> </a>
{{/partial}}

{{>layout.hbs}}