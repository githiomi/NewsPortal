{{#partial "pagename"}}
    Welcome {{username}}, you are logged in as an admin.
{{/partial}}

{{#partial "content"}}
    <h1> These are our departments: </h1>

    {{#each departments}}
        <ul>

            <li> {{name}}
                <br>
                <a href="/departments/{{id}}"> <button style="margin:5px;" class="btn btn-default"> View {{name}} department </button> </a>
            </li>

            <hr>
        </ul>
    {{/each}}

    {{#if news}}
        <h3> <small style="text-align:center; padding: 5px; border-bottom:2px solid teal;"> You Do Have Company News: </small> </h3>

        <div style="margin:10px;">
            <a href="/companynews"> <button class="btn btn-default"> View company news </button> </a>
        </div>

        <br>
        <a href="/companynews/new"> <button class="btn btn-primary"> Add News Item </button> </a>

    {{else}}
        <small>
            Sorry, There are no news to report to the Whole Company.
            <br><br>
            Be the first to notify everyone of something new!
            <br>
            <a href="/companynews/new"> <button class="btn btn-primary"> Add News Item </button> </a>
        </small>
    {{/if}}

{{/partial}}


{{>layout.hbs}}